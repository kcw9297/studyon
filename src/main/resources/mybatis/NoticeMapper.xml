<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="studyon.app.layer.domain.notice.mapper.NoticeMapper">
    <select id="selectAll" resultType="noticeRead">
        SELECT *
        FROM notice
        <where>
            <if test="rq.filter eq 'NORMAL'">
                name LIKE CONCAT('%', #{rq.keyword}, '%')
            </if>
            <if test="rq.filter eq 'EVENT'">
                nickname LIKE CONCAT('%', #{rq.keyword}, '%')
            </if>
        </where>
        ORDER BY notice_id DESC LIMIT #{prq.size} OFFSET #{prq.startPage}
    </select>

    <select id="countAll" resultType="Integer">
        SELECT COUNT(*)
        FROM notice
        <where>
            <if test="rq.filter eq 'NORMAL'">
                name LIKE CONCAT('%', #{rq.keyword}, '%')
            </if>
            <if test="rq.filter eq 'EVENT'">
                nickname LIKE CONCAT('%', #{rq.keyword}, '%')
            </if>
        </where>
    </select>
</mapper>